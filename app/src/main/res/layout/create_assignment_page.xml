<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/Add_Assignment_TextView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:text="@string/create_assignment"
        android:textSize="32sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061"/>
    <EditText
        android:id="@+id/Enter_Project_Name_editTextNumberSigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:ems="11"
        android:gravity="center"
        android:hint="@string/enter_assignment_name"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_Assignment_TextView"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/Enter_Shared_Users_editTextNumberSigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:autofillHints=""
        android:ems="11"
        android:gravity="center"
        android:hint="@string/enter_user_ids"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Enter_Project_Name_editTextNumberSigned"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/Enter_Assignment_Details_editTextNumberSigned"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:autofillHints=""
        android:ems="11"
        android:gravity="center"
        android:hint="@string/enter_assignment_details"
        android:inputType="text"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Enter_Shared_Users_editTextNumberSigned"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/Create_Assignment_Button"
        android:layout_width="277dp"
        android:layout_height="88dp"
        android:layout_marginTop="68dp"
        android:text="@string/create_assignment"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Enter_Assignment_Details_editTextNumberSigned" />

    <Button
        android:id="@+id/Previous_Page_Button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/previous_page"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>